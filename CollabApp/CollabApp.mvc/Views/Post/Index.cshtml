@model Post
@{
    ViewData["Title"] = "Index";
}

<h1>Posts</h1>
<div>
    <form asp-asp-controller="Post" asp-action="Index" method="post">
        <div>
            <label>Author</label>
            <input asp-for="Author" />
        </div>
        <div>
            <label>Title</label>
            <input asp-for="Title" />
        </div>
        <div>
            <label>Descripton</label>
            <input asp-for="Description" />
        </div>
        <input type="submit" value="Submit" />
    </form>
</div>  