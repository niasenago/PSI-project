@model Post
@{
    string title = Model?.Title ?? "Default Title";
    ViewData["Title"] = title;
}

<!DOCTYPE html>
<html>
<head>
    <title>@title</title>
    <link rel="stylesheet" href="PostView.cshtml.css">
</head>
<body>
    <h1>@title</h1>
    <h3>@(Model?.Author ?? "Unknown Author")</h3>
    <p>@(Model?.Description ?? "No Description")</p>
    <p>@(Model?.DatePosted != null ? Model.DatePosted.ToString() : "No Date Posted")</p>
</body>
</html>