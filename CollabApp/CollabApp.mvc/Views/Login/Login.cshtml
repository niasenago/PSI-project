
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html>
    <body>
        <div class="login-container mt-20">
            <h2>Sign in to InfoSync</h2>
            @if (@ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger mt-3">
                    @ViewBag.ErrorMessage
                </div>
            }
            @if (!string.IsNullOrEmpty(TempData["RegisterErrorMessage"] as string))
            {
                <div class="alert alert-danger mt-3">
                    @TempData["RegisterErrorMessage"]
                </div>
            }
            <form action="/login" method="post">
                <div class="form-floating mb-2">
                    <input type="text" id="username" name="username" class="form-control" placeholder="Username"/>
                    <label for="username">Username</label>
                </div>
                <div class="form-floating mb-2">
                    <input type="password" id="password" name="password" class="form-control" placeholder="Password" />
                    <label for="password">Password</label>
                </div>
                <button class="btn btn-primary mb-2" type="login">Login</button>
            </form>

            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#registrationModal">
                Create an account
            </button>
        </div>
        <!-- Bootstrap Modal -->
        <div class="modal fade" id="registrationModal" tabindex="-1" aria-labelledby="registrationModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="registrationModalLabel">Register</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <!-- Your registration form -->
                        <form asp-controller="Register" asp-action="Register" method="post">
                            <!-- Input fields for username, password, and confirm password -->
                            <!-- Ensure input field names match the properties in your RegisterViewModel -->
                            <div class="form-floating mb-2">
                                <input type="text" id="regUsername" name="Username" class="form-control" placeholder="Username" />
                                <label for="regUsername">Username</label>
                            </div>
                            <div class="form-floating mb-2">
                                <input type="password" id="regPassword" name="Password" class="form-control" placeholder="Password" />
                                <label for="regPassword">Password</label>
                            </div>
                            <div class="form-floating mb-2">
                                <input type="password" id="regConfirmPassword" name="ConfirmPassword" class="form-control" placeholder="Confirm password" />
                                <label for="regConfirmPassword">Confirm password</label>
                            </div>
                            <button type="submit" class="btn btn-primary">Create Account</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>