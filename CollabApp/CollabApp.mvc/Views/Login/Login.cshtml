
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Login";
}
<div class="login-container">
    <h2>Sign in to InfoSync</h2>
    <form action="/login" method="post">
        <div class="form-group">
            <input type="text" id="username" name="username" class="form-control" placeholder="Username"/>
        </div>
        <div class="form-group">
            <input type="password" id="password" name="password" class="form-control" placeholder="Password" />
        </div>
        <button class="btn-primary" type="login">Login</button>
    </form>

    @if(@ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger mt-3">
            @ViewBag.ErrorMessage
        </div>
    }
    <div class="mt-3">
        <p>Don't have an account?</p> 
    </div>
    <form asp-controller="Register" asp-action="DisplayRegisterForm" method="get">
        <button type="submit" class="btn-primary">Create an account</button>
    </form>    
</div>